<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sandbox_bee_slots_image_repeat">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/blackAlpha"
        android:orientation="vertical"
        android:padding="30dp">
        <ImageView
            android:id="@+id/profile_image_self"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person"
            android:background="@drawable/round_whiltealpha_field"
            android:layout_margin="10dp"
            android:contentDescription="pfp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTexts"
            android:padding="5dp"
            android:layout_marginVertical="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERNAME: "
                android:textSize="8pt"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/username_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:textColor="@color/white"
                android:textSize="8pt"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTexts"
            android:padding="5dp"
            android:layout_marginVertical="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL: "
                android:textSize="8pt"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/email_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textColor="@color/white"
                android:textSize="7pt"/>

        </LinearLayout>

        <Button
            android:id="@+id/logout_btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:text="LOGOUT"
            android:background="@drawable/round_form"
            android:textColor="@color/red"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>